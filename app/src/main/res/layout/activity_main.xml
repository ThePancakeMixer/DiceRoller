<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:orientation="vertical"
        android:id="@+id/dice">

        <ImageView
            android:contentDescription="Dice"
            android:id="@+id/dice_one"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_three"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:text="Roll Dice"
        app:layout_constraintLeft_toLeftOf="@id/dice"
        app:layout_constraintRight_toRightOf="@id/dice"
        app:layout_constraintTop_toBottomOf="@+id/dice"
        android:onClick="rollDice"/>


</android.support.constraint.ConstraintLayout>